@model IEnumerable<iSmash.ViewModels.CustomUserData>
@{
    ViewBag.Title = "ManageRoles";
}
@if (User.IsInRole("Admin"))
{
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col">
                    @*Left col that holds the users*@
                    @Html.ListBox("UserIds")
                </div>

                <div class="col">
                    @*Right col that holds the users*@
                    @Html.DropDownList("RoleName", " - Select Role - ")
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary" style="width: 100%" ;>MANAGE ROLES</button>
                </div>
            </div>
        }
    </div>
    <div class="table-wrapper">
        <table id="datatable1" class="table display responsive nowrap">
            <thead>
            <tr>

                <th>
                    @Html.DisplayName("ROLE")
                </th>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                @*<th>
                            @Html.DisplayName("Id")
                        </th>*@
            </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(model => user.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => user.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => user.Email)
                        </td>
                        @*<td>
                    @Html.DisplayFor(model => user.Id)
                </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <img src="~/img/HaHaHaMovieReferences.gif" />
    <hr /><p>Your current role is NOT AUTHORIZED to view this content.</p>
}
